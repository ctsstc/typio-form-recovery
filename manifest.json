{
    "manifest_version": 2,

    "name": "Tera Form Recovery",
    "description": "Robust form recovery that just works.",
    "version": "1.0",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

    "permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "storage",
        "contextMenus"
    ],

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "web_accessible_resources": ["img/*.png"],

    "options_ui" : {
        "page": "html/options.html",
        "chrome_style": true,
        "open_in_tab": false
    },

    "browser_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "38": "img/icon38.png"
        },
        "default_title": "Form recovery",
        "default_popup": "html/popup.html"
    }
}