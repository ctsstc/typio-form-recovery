{
    "manifest_version": 2,

    "name": "Tera Form Recovery",
    "description": "Robust form recovery that just works.",
    "version": "1.0",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

    "permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "storage",
        "contextMenus"
    ],

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "web_accessible_resources": ["img/*.png"],

    "options_page": "options.html"
}