{
    "manifest_version": 2,

    "name": "Typio Form Recovery",
    "description": "Never lose your form input again! Typio automatically saves text as you type and lets you recover it at any time.",
    "version": "1.5.0",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

    "permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "storage",
        "contextMenus"
    ],

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "web_accessible_resources": [
        "img/*",
        "css/*.css",
        "templates/*.tpl",
        "js/min/frame.min.js",
        "js/min/*.js.map"
    ],

    "options_ui" : {
        "page": "html/options.html",
        "chrome_style": true,
        "open_in_tab": false
    },

    "browser_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "38": "img/icon38.png"
        },
        "default_title": "Typio Form recovery",
        "default_popup": "html/popup.html"
    }
}