{
    "manifest_version": 2,

    "name": "Form Recovery",
    "description": "...",
    "version": "1.0",

    "permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "storage",
        "contextMenus"
    ],

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "web_accessible_resources": ["img/*.png"],

    "options_page": "options.html",

    "browser_action": {
        "default_title": "Testing testing"
    }
}